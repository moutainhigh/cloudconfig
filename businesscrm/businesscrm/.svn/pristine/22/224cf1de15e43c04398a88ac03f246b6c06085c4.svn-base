        pr.startDate,
        pr.endDate,
        pr.address,
        pr.feel,
        pr.projectManager,
        pr.dutyPerson,
        pr.createdBy,
        pr.createDate,
        pr.updatedBy,
        pr.updateDate,
        pr.province,
        pr.city,
        pr.county,
        pr.departmentTypeId,
        pr.serveObjectTypeId,
        pr.customerTypeId,
